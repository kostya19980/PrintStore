@model PrintStore.Models.User
@{
    ViewData["Title"] = "_OrderOwnerInfo";
}
<div class="cart_confirm_wrapper" style="max-width:450px;">
    <div class="cart_confirm_top_part" style="border-bottom: none">
        <label>Информация о клиенте</label>
        <div class="order_item_block">
            <div class="order_item_category">Идентификатор #@Model.Id</div>
            <div class="order_item_product">
                <div class="cart_item_image_wrapper" style="margin-left: 0;max-width:125px">
