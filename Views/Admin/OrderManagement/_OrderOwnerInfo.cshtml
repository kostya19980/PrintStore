                </div>
                <div class="order_item_product_description">
                    <div class="order_description_wrapper">
                        <div class="order_description_title">Имя</div>
                        <div class="order_description">@Model.Profile.FirstName</div>
                    </div>
                    <div class="order_description_wrapper">
                        <div class="order_description_title">Фамилия</div>
                        <div class="order_description">@Model.Profile.SecondName</div>
                    </div>
                    <div class="order_description_wrapper">
                        <div class="order_description_title">Номер телефона</div>
                        <div class="order_description">@Model.Login</div>
                    </div>
                    <div class="order_description_wrapper">
                        <div class="order_description_title">Электронная почта</div>
                        <a class="order_description" style="color: #337ab7;cursor:pointer">@Model.Email</a>
                    </div>
                </div>
            </div>
            <a class="user_orders_count" asp-controller="Admin" asp-action="SearchOrders" asp-route-UserId="@Model.Id">
            Все заказы (@ViewData["UserOrdersCount"])</a>
